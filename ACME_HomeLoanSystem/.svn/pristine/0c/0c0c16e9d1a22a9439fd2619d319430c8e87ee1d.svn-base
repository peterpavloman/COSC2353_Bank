<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
	  xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
	  xmlns:p="http://primefaces.org/ui">
    <h:head>
        <title>Repay Home Loan</title>
    </h:head>

	<h:body>
		<ui:composition template="template.xhtml">
			<ui:define name="top">
				<h2 class="text-l text-center">Account Details</h2>
			</ui:define>

			<ui:define name="content">
				<h:form rendered="#{userAction.loggedIn}">
					<p:panel header="Repay Home Loan" styleClass="span-l">
						<h:panelGrid columns="2" columnClasses="text-bold span-m,,">
							<h:outputLabel for="" value="Saving Account:"/>

							<h:panelGroup/>
							<p:commandButton id="repay" value="Repay" actionListener="#{userAction.login()}" ajax="false"/>
						</h:panelGrid>
						<p:messages/>
					</p:panel>

					<p:splitButton value="Back to Account Home" actionListener="#{userSession.toAcountMainPage()}" icon="ui-icon-home">
						<p:menuitem value="Log Out" actionListener="#{userAction.logout()}" icon="ui-icon-close"/>
					</p:splitButton>
				</h:form>
			</ui:define>
		</ui:composition>
    </h:body>
</html>

